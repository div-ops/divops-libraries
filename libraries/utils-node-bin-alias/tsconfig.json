{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2015", "DOM"],
    "target": "es2021",
    "module": "commonjs",
    "emitDeclarationOnly": true,

    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declarationDir": ""
  },
  "include": ["src"]
}
